{
  "compilerOptions": {
    "rootDir": "./back-hw-02",
    "module": "commonjs", // или "ES6", в зависимости от вашей конфигурации
    "target": "es6",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
